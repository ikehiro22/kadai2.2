<% if flash[:notice] %>
    <div class="flash">
        <%= flash[:notice] %>
    </div>
<% end %>
<h1>Books</h1>
<h4>title&body</h4>
<table>
  <% @book.errors.full_messages.each do |message| %>
    <div class="form-error">
       <%= message %>
    </div>
  <% end %>
  
  <% if @books.present? %>
  <% @books.each do |book| %>
    <%= book.title %>
    <%= book.body %>
    <%= link_to "Show", book_path(book.id) %>
    <%= link_to "Edit", edit_book_path(book.id) %>
    <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "honntounisakuzyoshimasukaaaa?" %>
    <br>
  <% end %>
  <% end %>
</table>

<h2>New Book</h2>
<%= form_for(@book) do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>
